import sys
import rpyc
import pytis.windows
import config

def say(target_ip, request, *arguments):
    arguments = [a.decode('utf-8') for a in arguments]
    connection = rpyc.connect('localhost', config.rpc_local_port)
    result = connection.root.request(target_ip, request, *arguments)
    if result is not None:
        sys.stderr.write(result.encode('utf-8'))
        sys.stderr.write('\n')

def run(args):
    if len(args) < 2 or args[1] == '--help':
        sys.stdout.write('usage: %s IP-ADDRESS REQUEST [ ARGUMENTS ... ]\n' % (args[0],))
        sys.exit()
    say(*args[1:])

if __name__ == '__main__':
    run(sys.argv)
